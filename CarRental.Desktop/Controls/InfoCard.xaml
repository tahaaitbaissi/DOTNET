<UserControl x:Class="CarRental.Desktop.Controls.InfoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="250">
    <Border Background="{StaticResource GlassSurfaceBrush}" BorderBrush="{StaticResource NeonBorderBrush}" BorderThickness="1" CornerRadius="10" Padding="20">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       FontSize="16" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Medium"/>
            
            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                <TextBlock Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           FontSize="32" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
                <TextBlock Text="{Binding Icon, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           FontSize="24" Margin="10,0,0,5" VerticalAlignment="Bottom" FontFamily="Segoe MDL2 Assets"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
