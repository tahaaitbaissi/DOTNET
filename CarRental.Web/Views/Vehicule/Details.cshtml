@model CarRental.Web.Models.Api.VehicleDto

@{
    ViewData["Title"] = $"{Model.Make} {Model.Model}";
}

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@ImageHelper.GetFullImageUrl(Model.ImageUrl)" class="img-fluid rounded" alt="@Model.Make @Model.Model">
        }
        else
        {
            <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded" style="height: 400px;">
                <span class="fs-3">Pas d'image disponible</span>
            </div>
        }
    </div>
    
    <div class="col-md-6">
        <h1>@Model.Make @Model.Model</h1>
        
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Caractéristiques</h5>
                <ul class="list-unstyled">
                    <li><strong>Année:</strong> @Model.Year</li>
                    <li><strong>Couleur:</strong> @Model.Color</li>
                    <li><strong>Nombre de places:</strong> @Model.Seats</li>
                    <li><strong>Immatriculation:</strong> @Model.LicensePlate</li>
                    <li>
                        <strong>Disponibilité:</strong> 
                        @if (Model.Status == "Available")
                        {
                            <span class="badge bg-success">Disponible</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">@Model.Status</span>
                        }
                    </li>
                </ul>
            </div>
        </div>
        
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Tarif</h5>
                <p class="fs-3 text-success">
                    <strong>@Model.DailyRate.ToString("C")</strong> / jour
                </p>
            </div>
        </div>
        
        @if (Model.Status == "Available")
        {
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-controller="Location" asp-action="Create" asp-route-vehiculeId="@Model.Id" class="btn btn-success btn-lg w-100 mb-2">
                    Réserver ce véhicule
                </a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg w-100 mb-2">
                    Se connecter pour réserver
                </a>
            }
        }
        else
        {
            <button class="btn btn-secondary btn-lg w-100 mb-2" disabled>
                Véhicule non disponible
            </button>
        }
        
        <a asp-action="Index" class="btn btn-outline-secondary w-100">
            Retour à la liste
        </a>
    </div>
</div>