@model CarRental.Web.Models.Api.VerifyEmailDto

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Verify Your Email</h2>
                    <p class="text-muted text-center mb-4">Please enter the 6-digit code sent to <strong>@Model?.Email</strong>.</p>

                    <form asp-action="VerifyEmail" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <input type="hidden" asp-for="Email" />
                        
                        <div class="mb-4">
                            <label asp-for="Token" class="form-label">Verification Code</label>
                            <input asp-for="Token" class="form-control form-control-lg text-center" placeholder="123456" maxlength="6" style="letter-spacing: 5px; font-size: 1.5rem;" />
                            <span asp-validation-for="Token" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Verify Account</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
